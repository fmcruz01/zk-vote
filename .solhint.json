{
    "extends": "solhint:recommended",
    "plugins": [
        "prettier"
    ],
    "rules": {
        "compiler-version": [
            "error",
            "^0.8.30"
        ],
        "func-visibility": [
            "warn",
            {
                "ignoreConstructors": true
            }
        ],
        "reason-string": ["warn", {"maxLength":50}],
        "prettier/prettier": "error",
        "code-complexity": "error",
        "avoid-throw": "error",
        "avoid-suicide": "error",
        "avoid-sha3": "warn"
    }
}
